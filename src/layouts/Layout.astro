---
import '@fontsource/poppins/400.css'
import '@fontsource/poppins/700.css'

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-jspurple-default text-jswhite min-h-screen">
        <slot />
    </body>
</html>
<style is:global>
    * {
        scroll-behavior: smooth;
    }
    body {
        font-family: "Poppins", sans-serif;
    }

    ul.list-style-circled li {
        @apply relative;
        @apply pl-6;
    }
    ul.list-style-circled li::before {
        content: "â¦¿";
        position: absolute;
        left: 0;
        @apply text-jsyellow;
        @apply text-sm;
        line-height: 25px;
    }

</style>
