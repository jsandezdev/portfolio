---
import '@fontsource/poppins/400.css'
import '@fontsource/poppins/700.css'

export interface Props {
    title: string
}

const { title } = Astro.props
const image = Astro.url.href + 'og/og.jpeg'
const description =
    'Desarrollador web Fullstack. Creo aplicaciones web eficientes y escalables utilizando Astro, JavaScript, NodeJs, React, TailwindCSS, entre otros. Visita mi portfolio para conocer mis proyectos y experiencia'
---

<!DOCTYPE html>
<html lang='es'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width' />
        <link rel='apple-touch-icon' sizes='180x180' href='/icons/apple-touch-icon.png' />
        <link rel='icon' type='image/png' sizes='32x32' href='/icons/favicon-32x32.png' />
        <link rel='icon' type='image/png' sizes='16x16' href='/icons/favicon-16x16.png' />
        <link rel='icon' type='image/ico' href='/icons/favicon.ico' />
        <link rel='canonical' href={Astro.url.href} />
        <meta name='generator' content={Astro.generator} />
        <meta name='robots' content='index, follow' />
        <link rel='sitemap' href='/sitemap-index.xml' />
        <meta http-equiv='Content-Type' content='text/html; charset=utf-8' />
        <meta name='language' content='es_ES' />
        <meta name='author' content='Jordi Sández Martínez' />
        <link rel='stylesheet' href='https://unpkg.com/aos@next/dist/aos.css' />

        <title>{title}</title>
        <meta name='title' content={title} />
        <meta name='description' content={description} />

        <meta property='og:type' content='website' />
        <meta property='og:url' content={Astro.url.href} />
        <meta property='og:title' content={title} />
        <meta property='og:description' content={description} />
        <meta property='og:image' content={image} />
        <meta property='og:locale' content='es_ES' />
        <meta property='og:type' content='website' />

        <meta property='twitter:card' content='summary_large_image' />
        <meta property='twitter:url' content={Astro.url.href} />
        <meta property='twitter:title' content={title} />
        <meta property='twitter:description' content={description} />
        <meta property='twitter:image' content={image} />
    </head>
    <body class='bg-jspurple-default text-jswhite min-h-screen'>
        <slot />
        <script is:inline src='https://unpkg.com/aos@next/dist/aos.js'></script>
        <script is:inline>
            // eslint-disable-next-line no-undef
            AOS.init({
                easing: 'ease',
                once: true,
                disable: () => window.innerWidth < 1024
            })
        </script>
    </body>
</html>
<style is:global>
    * {
        scroll-behavior: smooth;
    }
    body {
        font-family: 'Poppins', sans-serif;
    }
    ul.list-style-circled li {
        @apply relative;
        @apply pl-6;
    }
    ul.list-style-circled li::before {
        content: '⦿';
        position: absolute;
        left: 0;
        @apply text-jsyellow;
        @apply text-sm;
        line-height: 25px;
    }
</style>
