<section class='bg-jspurple-darker py-5'>
    <div class='max-w-screen-xl mx-auto px-5'>
        <div
            class='flex flex-col sm:flex-row justify-between items-center text-center sm:text-start'
        >
            <span class='text-jslightgrey text-sm mb-6 sm:mb-0'
