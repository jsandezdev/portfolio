---
export interface Props {
	name: string;
	type?: string;
	placeholder?: string;
}

const { type = 'text', placeholder = '', name } = Astro.props;
---

<input name={name} type={type} placeholder={placeholder} class="border mb-4 border-jsgrey placeholder:text-jsgrey bg-transparent rounded-md py-2 px-3 block w-full"/>
