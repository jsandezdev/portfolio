---
export interface Props {
    name: string;
    placeholder?: string;
    rows?: number;
    required?: boolean
}

const { placeholder = '', rows = 5, name, required } = Astro.props;
---

<label for={name} class="sr-only">{name}</label>
<textarea
    name={name}
    rows={rows}
    placeholder={placeholder}
    required={required || false}
    class="border border-jsgrey placeholder:text-jsgrey bg-transparent rounded-md transition-all outline-none hover:border-jslightgrey focus:border-jsyellow py-4 px-5 md:text-lg block w-full">
</textarea>
